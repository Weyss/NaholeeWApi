{% extends 'base.html.twig' %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/detail-tv.css') }}">
{% endblock %}

{% block body %}
<main>
    <h2>{{ data.name }}</h2>

    <div>
        {% if isInDatabase == null %}
            <span class="alert" >Cette serie n'est pas ajouter Ã  votre liste</span>
        {% else %}
            <span class="alert" >Cette serie est dans votre liste</span>    
        {% endif %}
        {{form(formTv)}}
    </div>
    
    <span id="js-info"></span>

    <p>{{ data.overview }}</p>

    <ul id="genre">
        {% for genre in data.genres %}
        <li>{{ genre.name }}</li>
        {% endfor %}
    </ul>
    
    <ul id="country">
        {% for country in data.production_countries %}
        <li>{{ country.name }}</li>
        {% endfor %}
    </ul>
    
    <span id="datetime">{{ data.first_air_date }}</span>
    <img src="https://image.tmdb.org/t/p/w500{{ data.poster_path }}" alt="">
</main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/submit.js') }}"></script>
{% endblock %}